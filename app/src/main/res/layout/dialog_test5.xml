<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_x="521dp"
        android:layout_y="328dp"
        android:background="@drawable/adddailogkuang"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="223dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/add_hui"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/test_dialog3_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="编码成功！"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/test_dialog3_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gou" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/test_dialog3_btn"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/queding"
                android:text="确  定"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="36dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>