<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tv1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_huangsebiankuang"
            android:gravity="center"
            android:text="序号"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_tv2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_huisebiankuang"
            android:gravity="center"
            android:text="编号"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_tv3"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_huisebiankuang"
            android:gravity="center"
            android:text="完成时间"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_tv4"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_huisebiankuang"
            android:gravity="center"
            android:text="测试结论"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_tv5"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_huisebiankuang"
            android:gravity="center"
            android:text="测试人"
            android:textAlignment="center"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>